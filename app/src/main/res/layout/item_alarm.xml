<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    android:paddingRight="4dp"
    android:paddingLeft="4dp">

    <TextView
        android:id="@+id/alarm_account"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="3dp"
        android:gravity="center"
        android:text="ACCOUNT"
        android:textColor="@color/cardview_dark_background"
        android:textStyle="bold"
        android:visibility="visible" />
        <!--android:background="@drawable/background_account_header"-->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="60dp"
        android:background="@drawable/background_alarm_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_alarm_ic"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:padding="4dp"
            android:src="@drawable/ic_siren_24"
            android:layout_marginLeft="1dp"
            android:layout_marginStart="1dp" />

        <LinearLayout
            android:id="@+id/rl_alarmMsg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="4dp">

            <TextView
                android:id="@+id/alarm_Msg"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="top"
                android:text="Alarm info"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:gravity="bottom|end"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/alarm_Zn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:text="Zone"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/alarm_Date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end|bottom"
                    android:text="25/12/1989  25:32"
                    android:textColor="@android:color/white"
                    android:textSize="10sp" />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>