<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backglogin6"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="18dp"
    android:paddingLeft="18dp"
    android:paddingRight="18dp"
    android:paddingTop="18dp"
    tools:context="com.divinesecurity.safehouse.registerPackage.LoginActivity">

    <ImageView
        android:layout_width="240dp"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="28dp"
        android:contentDescription="@string/iv_logo"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="YOUR SECURITY IS OUR PRIORITY"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/txt_loginUsername"
        android:layout_width="260dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_rounded_corner2"
        android:drawableLeft="@drawable/ic_person_white_24dp"
        android:ems="10"
        android:gravity="fill_vertical|center_horizontal"
        android:hint="Username"
        android:inputType="textEmailAddress"
        android:maxLines="1"
        android:textColor="@android:color/white"
        android:textColorHint="#fff"
        android:textStyle="bold"
        android:drawableStart="@drawable/ic_person_white_24dp" />

    <EditText
        android:id="@+id/txt_loginPassword"
        android:layout_width="260dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/button_rounded_corner2"
        android:drawableLeft="@drawable/ic_lock_white_24dp"
        android:drawableRight="@drawable/ic_eye_off_withe_24dp"
        android:ems="10"
        android:gravity="fill_vertical|center_horizontal"
        android:hint="****"
        android:inputType="textPassword"
        android:maxLines="1"
        android:textColor="@android:color/white"
        android:textColorHint="#fff"
        android:textSize="20sp"
        android:textStyle="bold"
        android:drawableStart="@drawable/ic_lock_white_24dp"
        android:drawableEnd="@drawable/ic_eye_off_withe_24dp" />

    <Button
        style="@style/TextAppearance.AppCompat.Body1"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/background_login"
        android:clickable="true"
        android:onClick="login"
        android:padding="16dp"
        android:text="Login"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:onClick="recover"
            android:background="?attr/selectableItemBackground"
            android:foreground="?attr/selectableItemBackground"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:text="|"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="registerScreen"
            android:text="Register"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:background="?attr/selectableItemBackground"
            android:foreground="?attr/selectableItemBackground"/>

    </LinearLayout>

</LinearLayout>
