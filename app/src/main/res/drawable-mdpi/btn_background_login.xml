<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:endColor="#894cd153"
                android:startColor="#46b32b"
                android:type="linear" />
            <corners android:radius="25dp" />
            <stroke
                android:width="1dp"
                android:color="#8dbc7c"/>
            <padding
                android:left="2dp"
                android:right="2dp"
                android:top="2dp"
                android:bottom="2dp"/>
        </shape>
    </item>

    <item >
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:endColor="#7CC597"
                android:startColor="#046C62"
                android:type="linear" />
            <corners android:radius="25dp" />
            <stroke
                android:width="1dp"
                android:color="#d7dce2"/>
            <padding
                android:left="2dp"
                android:right="2dp"
                android:top="2dp"
                android:bottom="2dp"/>
        </shape>
    </item>
</selector>